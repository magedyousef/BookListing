<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f79844"
tools:context="com.example.maged.booklisting.MainActivity">

<TextView
    android:id="@+id/status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#69F0AE"
    android:padding="5dp"
    android:textAlignment="center"
    android:textSize="16sp"
    tools:text="Internet Connected" />

<TextView
    android:id="@+id/empty_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="@string/no_books"
    android:textAppearance="?android:textAppearanceMedium"/>

<ProgressBar
    android:id="@+id/loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" />

<LinearLayout
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/status"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Here Enter Book Name OR Author Name"
        android:textColorHint="#c4c1c1">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:textColor="#2d0d0d" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/search_button"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ef7676"
        android:foreground="?android:selectableItemBackground"
        android:text="SEARCH" />

</LinearLayout>

<ListView
    android:id="@+id/books_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/search_bar"
    android:layout_marginTop="10dp"
    android:divider="@null"
    android:foreground="?android:selectableItemBackground" />

</RelativeLayout>
